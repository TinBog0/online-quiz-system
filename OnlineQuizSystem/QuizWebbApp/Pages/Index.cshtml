@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #f9f9f9;
        font-family: sans-serif;
    }

    .navbar, .notifications-bar {
        background-color: #3b82f6; /* Primary color */
    }

    .navbar-brand, .navbar-nav .nav-link {
        color: #ffffff !important;
    }

    .navbar-nav .nav-link:hover {
        color: #f0f0f0 !important;
        text-shadow: 0 0 5px rgba(255,255,255,0.5);
    }

    h1 {
        color: #3b82f6; /* Primary color */
    }

    .btn-primary {
        background-color: #3b82f6;
        border-color: #3b82f6;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #34d399; /* Secondary color */
        border-color: #34d399;
        transform: scale(1.05);
        box-shadow: 0 0 10px rgba(52,211,153,0.5);
    }

    .friends-list {
        border-color: #34d399;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .friends-list:hover {
        transform: scale(1.02);
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .notifications-bar {
        position: fixed;
        bottom:0; 
        left:0; 
        right:0; 
        color: #ffffff;
        z-index: 999;
    }

    .notifications-bar h5 {
        color: #ffffff;
        font-weight: bold;
    }

    .notifications-bar .list-group-item {
        border: none;
        border-bottom: 1px solid #ffffff22;
        background: transparent;
        color: #fff;
        transition: background-color 0.2s ease;
    }

    .notifications-bar .list-group-item:hover {
        background-color: #ffffff22;
    }

    /* Quizzes list styling */
    .quizzes-card {
        border: 2px solid #34d399;
        border-radius: 5px;
        overflow-y: auto;
        max-height: 60vh;
        background: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .quizzes-card h5 {
        color: #3b82f6;
        text-align: center;
        margin-top: 10px;
    }

    .quizzes-list {
        list-style: none;
        padding: 10px;
        margin: 0;
    }

    .quizzes-list li {
        background-color: #f9f9f9;
        margin-bottom: 5px;
        padding: 10px;
        border-radius: 4px;
        border: 1px solid #ddd;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .quizzes-list li:hover {
        background-color: #e5f7ee;
    }

    .main-content {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {opacity: 0;}
        to {opacity: 1;}
    }
</style>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="/">Online Quiz System</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" 
            data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" 
            aria-label="Toggle navigation">
        <span class="navbar-toggler-icon text-white"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/About">About</a></li>
            <li class="nav-item"><a class="nav-link" href="/Contact">Contact</a></li>
            <li class="nav-item"><a class="nav-link" href="/Profile">Profile</a></li>
            <li class="nav-item"><a class="nav-link" href="/Settings">Settings</a></li>
        </ul>
    </div>
</nav>

<!-- Main Content Area -->
<!-- Using full viewport height minus whatever space you want. For simplicity, 80vh. -->
<div class="container-fluid" style="height:80vh; position:relative;">
    <div class="row h-100 g-0">
        <!-- Left Column: Quizzes hugging the left side -->
        <div class="col-auto d-flex flex-column justify-content-center pl-3 pr-3">
            <div class="quizzes-card">
                <h5>Available Quizzes</h5>
                <ul class="quizzes-list">
                    @if (Model.Quizzes == null || !Model.Quizzes.Any())
                    {
                        <li>No quizzes found.</li>
                    }
                    else
                    {
                        foreach (var quiz in Model.Quizzes)
                        {
                            <li>@quiz.Title</li>
                        }
                    }
                </ul>
            </div>
        </div>

        <!-- Center Column: Main content (Play button, quiz code input) -->
        <div class="col d-flex flex-column justify-content-center align-items-center main-content">
            <h1 class="mb-4">Play Quiz</h1>
            <a href="#" class="btn btn-primary mb-3" style="width: 150px;">Play</a>
            <input type="text" class="form-control text-center" placeholder="Enter Quiz Code" style="max-width: 300px;">
        </div>

        <!-- Right Column: Friends list -->
        <div class="col-auto d-flex flex-column justify-content-center pl-3 pr-3">
            <div class="card friends-list" style="width: 200px;">
                <div class="card-body">
                    <h5 class="card-title" style="color:#3b82f6;">Friends</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">John</li>
                        <li class="list-group-item">Jane</li>
                        <li class="list-group-item">Alex</li>
                        <li class="list-group-item">Sarah</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Notification List at the Bottom -->
<div class="container-fluid notifications-bar p-3">
    <h5>Notifications</h5>
    <ul class="list-group">
        <li class="list-group-item">You were invited to "Math Quiz 101".</li>
        <li class="list-group-item">New quiz available: "Physics Midterm".</li>
        <li class="list-group-item">Your friend John started a "History Challenge" quiz.</li>
    </ul>
</div>
